<apex:page standardcontroller="Case">
<apex:messages />
	<apex:sectionheader title="{!$ObjectType.Case.label} Edit" subtitle="{!IF(ISNULL(Case.CaseNumber), 'New Ticket',Case.CaseNumber)}"/>
	<apex:form >
		<apex:pageblock mode="edit" title="{!$ObjectType.Case.label} Edit">
			<apex:pageblockbuttons >
				<apex:commandbutton value="Save" action="{!Save}"/>
				<apex:commandbutton value="Cancel" action="{!Cancel}"/>
			</apex:pageblockbuttons>

			<!-- **********   [Record Type : Project / Feature Request ]   **********  -->
			<apex:outputpanel rendered="{!CASESAFEID(Case.RecordTypeId)='012600000009eL4AAI'}">
				<apex:pageblocksection title="PROJECT / FEATURE REQUEST" showheader="true" columns="1">
					<apex:inputfield value="{!Case.Subject}" required="false"/>
				</apex:pageblocksection>
				<apex:pageblocksection title="Fields" showheader="false" columns="2">
					<apex:inputfield value="{!Case.ContactId}" required="false"/>
					<apex:inputfield value="{!Case.Status}" required="true"/>
					<apex:inputfield value="{!Case.Requested_By__c}" required="false"/>
					<apex:inputfield value="{!Case.Type}" required="false"/>
					<apex:inputfield value="{!Case.Priority}" required="false"/>
					<apex:inputfield value="{!Case.Program__c}" required="false"/>
					<apex:inputfield value="{!Case.Module_Affected__c}" required="false"/>
					<apex:inputfield value="{!Case.Modification_Type__c}" required="false"/>
					<apex:inputfield value="{!Case.ParentId}" required="false"/>
					<apex:pageblocksectionitem />
				</apex:pageblocksection>
				<apex:pageblocksection title="Details" showheader="true" columns="1">
					<apex:inputfield value="{!Case.Detailed_Description__c}" required="false"/>
					<apex:inputfield value="{!Case.Description}" required="false"/>
				</apex:pageblocksection>
				<apex:pageblocksection title="System Administrator Comments" showheader="true" columns="2">
					<apex:inputfield value="{!Case.SuppliedEmail}" required="false"/>
					<apex:outputfield value="{!Case.OwnerId}"/>
					<apex:inputfield value="{!Case.AccountId}" required="false"/>
					<apex:outputfield value="{!Case.RecordTypeId}"/>
					<apex:pageblocksectionitem />
					<apex:inputfield value="{!Case.Origin}" required="false"/>
				</apex:pageblocksection>
			</apex:outputpanel>
		</apex:pageblock>
	</apex:form>
